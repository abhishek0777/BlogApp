        // fav icon
        //link(rel='shortcut icon', href='images/icon.png')

        title BlogApp
    body
        div.backColor
            nav.container.navbar.navbar-expand-lg.navbar-dark
                a.navbar-brand(href='#') BlogApp
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarNav.collapse.navbar-collapse
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link(href='/' style="color:white") Home 
                        if user
                            li.nav-item
                                a.nav-link(href='/articles/add' style="color:white") Add article
                    
                    ul.navbar-nav
                        if user
                            li.nav-item
                                a.nav-link(href='/users/logout' style="color:white") Logout
                        else
                            li.nav-item
                                a.nav-link(href='/users/register' style="color:white") register
                            li.nav-item
                                a.nav-link(href='/users/login' style="color:white") Login

        
        div.container
            img(src="/images/banner.jpg" style="width:100%")


        .container
            !=messages('message',locals)

            //validation errors
            if errors
                each error,i in errors
                    div(class='alert alert-danger') #{error.msg}
            block content
            br
            hr

